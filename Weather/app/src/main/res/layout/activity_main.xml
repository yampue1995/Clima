<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/txtSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Ex. Cali,co"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/btnSearch"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEARCH WEATHER" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tlblCurrent"
                    android:background="#8BC34A"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Current:" />

                <TextView
                    android:id="@+id/tlblmin"
                    android:background="#2196F3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Min:"/>

                <TextView
                    android:id="@+id/tlblmax"
                    android:background="#CDDC39"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Max:"/>

                <TextView
                    android:id="@+id/ttextViewWeather"
                    android:background="#F44336"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Weather:" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lblCurrent"
                    android:background="#8BC34A"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Current weather" />

                <TextView
                    android:id="@+id/lblmin"
                    android:background="#2196F3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Min weather"/>

                <TextView
                    android:id="@+id/lblmax"
                    android:background="#CDDC39"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Max weather"/>

                <TextView
                    android:id="@+id/textViewWeather"
                    android:background="#F44336"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Here weatherval" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/imgWeather"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@android:color/darker_gray" />

        <Button
            android:id="@+id/btnGo"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GO TO MAPS" />
    </LinearLayout>

</RelativeLayout>